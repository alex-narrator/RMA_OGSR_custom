<?xml version='1.0' encoding="UTF-8"?>
<w>
	<background x="240" y="256" width="541" height="265" stretch="1">
		<texture>ui_inGame2_message_box</texture>
		<auto_static x="29" y="32" width="480" height="128" stretch="1">
			<texture>ui_inGame2_panorama_window</texture>
		</auto_static>
		<auto_static x="32" y="36" width="473" height="124" stretch="1">
			<texture>ui_inGame2_sky_panorama</texture>
		</auto_static>
	</background>

	<!-- TIME DISPLAY BACKGROUND -->
	<time_frame_line x="209" y="0" width="125" height="32">
		<texture>ui_string_01</texture>
	</time_frame_line>
	<!-- date/time static -->
	<date x="55" y="7" width="40" height="32">
		<text font="letterica18" r="255" g="255" b="255" complex_mode="0"/>
	</date>
	<time x="10" y="7" width="40" height="32">
		<text font="letterica18" r="255" g="255" b="255" complex_mode="0"/>
	</time>		

	<!-- SKIP TIME-->
	<time_track x="29" y="160" width="480" height="16" step="0.0416" val_on_slider="0"/>
	<timer_frame_line x="209" y="220" width="125" height="32">
		<texture>ui_string_01</texture>
	</timer_frame_line>
	<time_value x="50" y="7" width="20" height="10">
		<text font="graffiti19" r="238" g="153" b="26" align="c" v_align="c"/>
	</time_value>
	
	<timer_header x="20" y="2" width="60" height="20">
		<text x="0" y="0" font="arial_21" align="c" vert_align="c">st_sleep_timer</text>
	</timer_header>
	
	<separator_static x="15" y="24" width="15" height="60">
		<text x="0" y="-2" font="arial_21" r="240" g="217" b="182" align="c" vert_align="c">:</text>
	</separator_static>

	<hour_static x="5" y="25" width="15" height="60">
		<text x="0" y="-2" font="arial_21" r="240" g="217" b="182" align="c" vert_align="c"/>
	</hour_static>
	<!-- PLUS, MINUS BUTTON HOURS-->
	<plus_button_h x="2" y="0" width="12" height="15" stretch="1" hint="st_inc_hour">
		<texture>ui_beltbut_plus</texture>
		<!-- <text x="0" y="0" align="c" vert_align="c" font="arial_21">+</text> -->
	</plus_button_h>	
	<minus_button_h x="2" y="40" width="12" height="15" stretch="1" hint="st_dec_hour">
		<texture>ui_beltbut_min</texture>
		<!-- <text align="c" vert_align="c" font="arial_21">-</text> -->
	</minus_button_h>
	
	<minute_static x="25" y="25" width="15" height="60">
		<text x="0" y="-2" font="arial_21" r="240" g="217" b="182" align="c" vert_align="c"/>
	</minute_static>
	<!-- PLUS, MINUS BUTTON MINUTES-->
	<plus_button_m x="2" y="0" width="12" height="15" stretch="1" hint="st_inc_min">
		<texture>ui_beltbut_plus</texture>
		<!-- <text x="0" y="0" align="c" vert_align="c" font="arial_21">+</text> -->
	</plus_button_m>
	<minus_button_m x="2" y="40" width="12" height="15" stretch="1" hint="st_dec_min">
		<texture>ui_beltbut_min</texture>
		<!-- <text align="c" vert_align="c" font="arial_21">-</text> -->
	</minus_button_m>

	<clear_button x="50" y="43" width="50" height="20" stretch="1" hint="st_hint_clear">
		<texture>ui_button_ordinary</texture>
		<text x="0" y="-1" align="c" vert_align="c" font="arial_21">st_clear</text>
	</clear_button>

	<!-- SLEEP WAIT BTN -->
    <sleep_button x="115" y="222" width="90" height="30" stretch="1" hint="st_hint_sleep">
        <texture>ui_button_ordinary</texture>
        <text font="graffiti19" r="238" g="153" b="26" align="c" v_align="c">ui_inv_sleep</text>
        <text_color>
			<e r="240"	g="217" b="182"/>				
			<t r="0"	g="0"	b="0"/>				
			<d r="135"	g="123" b="116"/>
			<h r="0"	g="0"	b="0"/>
		</text_color>
    </sleep_button>
	
    <quit_button x="335" y="222" width="90" height="30" stretch="1" hint="st_sleep_quit">
        <texture>ui_button_ordinary</texture>
        <text font="graffiti19" r="238" g="153" b="26" align="c" v_align="c">ui_inv_exit</text>
        <text_color>
			<e r="240"	g="217" b="182"/>				
			<t r="0"	g="0"	b="0"/>				
			<d r="135"	g="123" b="116"/>
			<h r="0"	g="0"	b="0"/>
		</text_color>
    </quit_button>	
</w>
