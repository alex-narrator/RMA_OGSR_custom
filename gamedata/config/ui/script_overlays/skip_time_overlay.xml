<?xml version='1.0' encoding="UTF-8"?>
<w>
	<background x="0" y="0" width="541" height="265" stretch="1">
		<texture>ui_inGame2_message_box</texture>
		<auto_static x="29" y="32" width="480" height="128" stretch="1">
			<texture>ui_inGame2_panorama_window</texture>
		</auto_static>
		<!-- <auto_static x="32" y="36" width="473" height="124" stretch="1"> -->
			<!-- <texture>ui_inGame2_sky_panorama</texture> -->
		<!-- </auto_static> -->
	</background>

	<panorama x="32" y="36" width="473" height="124" stretch="1" shift="-10" scale_texture_w="591" scale_texture_h="118">
		<texture>ui_actor_sleep_panorama</texture>
		<marker x="0" y="0" width="1" height="124" stretch="1">
			<texture>ui_inGame2_marker</texture>
		</marker>
	</panorama>

	<!-- TIME DISPLAY BACKGROUND -->
	<time_frame_line x="209" y="0" width="125" height="32">
		<texture>ui_string_01</texture>
	</time_frame_line>
	<!-- date/time static -->
	<date x="55" y="0" width="55" height="32">
		<text y="0" align="l" v_align="c" font="letterica18" r="255" g="255" b="255" complex_mode="0"/>
	</date>
	<time x="10" y="0" width="20" height="32">
		<text y="0" align="l" v_align="c" font="letterica18" r="255" g="255" b="255" complex_mode="0"/>
	</time>		

	<!-- SKIP TIME-->
	<time_track x="32" y="160" width="470" height="16" step="1" min="1" max="24" is_integer="1"/>
	<timer_frame_line x="209" y="220" width="125" height="32">
		<texture>ui_string_01</texture>
	</timer_frame_line>
	<time_value x="40" y="6" width="40" height="20">
		<text y="0" font="graffiti19" r="238" g="153" b="26" align="c" v_align="c"/>
	</time_value>

	<!-- WAIT BUTTON -->
    <wait_button x="115" y="222" width="90" height="30" stretch="1" hint="st_hint_skip_time" accel="kW">
        <texture>ui_button_ordinary</texture>
        <text font="graffiti19" r="238" g="153" b="26" align="c" v_align="c">ui_inv_skip_time</text>
        <text_color>
			<e r="240"	g="217" b="182"/>				
			<t r="0"	g="0"	b="0"/>				
			<d r="135"	g="123" b="116"/>
			<h r="0"	g="0"	b="0"/>
		</text_color>
    </wait_button>
	
	<!-- SLEEP BUTTON -->
    <sleep_button x="115" y="222" width="90" height="30" stretch="1" hint="st_hint_sleep" accel="kS">
        <texture>ui_button_ordinary</texture>
        <text font="graffiti19" r="238" g="153" b="26" align="c" v_align="c">ui_inv_sleep</text>
        <text_color>
			<e r="240"	g="217" b="182"/>				
			<t r="0"	g="0"	b="0"/>				
			<d r="135"	g="123" b="116"/>
			<h r="0"	g="0"	b="0"/>
		</text_color>
    </sleep_button>	
	
    <quit_button x="335" y="222" width="90" height="30" stretch="1" hint="st_sleep_quit">
        <texture>ui_button_ordinary</texture>
        <text font="graffiti19" r="238" g="153" b="26" align="c" v_align="c">ui_inv_exit</text>
        <text_color>
			<e r="240"	g="217" b="182"/>				
			<t r="0"	g="0"	b="0"/>				
			<d r="135"	g="123" b="116"/>
			<h r="0"	g="0"	b="0"/>
		</text_color>
    </quit_button>	
</w>
