<w>
	<!-- Фон экрана загрузки, может состоять из множества элементов-->
	<background width="1024" height="768">
        <auto_static width="1024" height="768" stretch="1">
            <!-- <texture x="0" y="0" width="2050" height="1536">ui\ui_load</texture> -->
			<texture x="0" y="0" width="1024" height="768">ui\ui_load</texture>
        </auto_static>
        <auto_static x="373" y="309" width="277" height="150" stretch="1">
            <!-- <texture x="0" y="0" width="2050" height="1536">ui\ui_load</texture> -->
			<texture x="0" y="0" width="739" height="301">ui\ui_title_soc_logo</texture>
        </auto_static>		
	</background>


	<!-- Картинка загружаемого уровня -->
    <!-- <loading_logo x="128" y="156" width="768" height="511" stretch="1"/> -->
	<!-- <loading_logo x="0" y="0" width="1024" height="768" stretch="1"/> -->
	<loading_logo x="25" y="19" width="973" height="730" stretch="1"/>


	<!-- Прогрессбар загрузки -->
	<!-- Новые режимы: mode="from_center" - от центра к краям, mode="horz" - слева направо, mode="back" - справа налево -->
	<!-- Так же есть и вертикальные режимы. Для лоадскрина они конечно не пригодятся, но для информации напишу здесь, есть mode="vert", mode="down", mode="vert_from_center" -->
	<!-- По умолчанию ЗП-стайл прогрессбар рисуется ПОД фоном (background). Чтобы рисовать прогрессбар НАД background - надо сделать under_background="0" -->
    <loading_progress x="6" y="752" width="1012" height="10" min="0" max="100" pos="0" inertion="5.0" mode="horz" under_background="0">
	<!-- <loading_progress x="258" y="595" width="509" height="10" min="0" max="100" pos="0" inertion="5.0" mode="horz" under_background="1"> -->
		<!--Текстура фона прогрессбара-->
        <!--background>
            <texture x="400" y="800" width="506" height="4">ui\ui_load_new</texture>
        </background-->
		<!--Непосредственно текстура прогрессбара-->
        <progress>
            <texture x="0" y="1542" width="1012" height="10">ui\ui_load</texture>
        </progress>
		<!-- С помощью этих опций можно подкрасить текстуру прогрессбара разными цветами, когда прогресс находится в начале, в середине, и соотв. в конце -->
        <!--min_color r="30" g="88" b="126"/>
		<middle_color r="60" g="118" b="156"/>
		<max_color r="90" g="148" b="186"/-->
		<!--<min_color color="white"/>
		<middle_color color="blue"/>
		<max_color color="green"/>-->
    </loading_progress>


	<!-- Проценты загрузки числами-->
    <loading_progress_percent x="0" y="710" width="1024" height="20">
        <text align="c" r="216" g="186" b="140" font="letterica25"/>
    </loading_progress_percent>


	<!-- Стадия загрузки текстом-->
    <loading_stage x="0" y="735" width="1024" height="20">
        <text align="c" r="240" g="217" b="182" font="arial_21"/>
    </loading_stage>


	<!-- ім'я рівня -->
    <loading_level_name x="0" y="15" width="1024" height="20" complex_mode="1">
        <text align="c" r="240" g="217" b="182" font="graffiti22"/>
    </loading_level_name>
	
	<!-- опис рівня -->
    <loading_level_description x="0" y="35" width="1024" height="20" complex_mode="1">
        <text align="c" r="240" g="217" b="182" font="graffiti22"/>
    </loading_level_description>

	<!-- Рубрика 100 советов в Зоне-->
    <loading_header x="0" y="610" width="1024" height="20" complex_mode="1">
        <text align="c" r="240" g="217" b="182" font="graffiti22"/>
		<!-- <text align="c" r="103" g="103" b="103" font="graffiti22"/> -->
    </loading_header>

	<!-- Номер Совета-->
    <loading_tip_number x="0" y="630" width="1024" height="20" complex_mode="1">
        <text align="c" r="240" g="217" b="182" font="graffiti22"/>
    </loading_tip_number>

	<!-- Текст совета-->
    <loading_tip x="112" y="650" width="800" height="80" complex_mode="1" number_of_tips="44">
        <text alignment="c" align="c" r="240" g="217" b="182" font="graffiti22"/>
    </loading_tip>
</w>
