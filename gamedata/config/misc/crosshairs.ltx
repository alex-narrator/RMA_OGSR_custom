[crosshair_default]
auto_scale = false
const_scale = 2
center = ui_crosshair_classic_center

[crosshair_debug]
auto_scale = false
const_scale = 4
center = ui\cursor

[crosshair_circle]
auto_scale = true
center = ui_crosshair_circle_center
left = ui_crosshair_circle_left, 4, 12
right = ui_crosshair_circle_right, 4, 12
top = ui_crosshair_circle_top, 12, 4
down = ui_crosshair_circle_down, 12, 4

[crosshair_circle_wide]
auto_scale = true
center = ui_crosshair_circle_center
left = ui_crosshair_circle_left, 4, 20
right = ui_crosshair_circle_right, 4, 20
top = ui_crosshair_circle_top, 20, 4
down = ui_crosshair_circle_down, 20, 4

[crosshair_half_circle_wide_lr]
auto_scale = true
center = ui_crosshair_circle_center
left = ui_crosshair_circle_left, 4, 20
right = ui_crosshair_circle_right, 4, 20

[crosshair_square]
auto_scale = true
center = ui_crosshair_square_center
left_top = ui_crosshair_square_left_top, 12, 12
right_top = ui_crosshair_square_right_top, 12, 12
left_down = ui_crosshair_square_left_down, 12, 12
right_down = ui_crosshair_square_right_down, 12, 12

[crosshair_crossed]
auto_scale = true
center = ui_crosshair_square_center
left = ui_crosshair_crossed_left, 12, 4
right = ui_crosshair_crossed_right, 12, 4
top = ui_crosshair_crossed_top, 4, 12
down = ui_crosshair_crossed_down, 4, 12

[crosshair_crossed_x]
auto_scale = true
center = ui_crosshair_square_center
left_top = ui_crosshair_crossed_x_left_top, 12, 12
right_top = ui_crosshair_crossed_x_right_top, 12, 12
left_down = ui_crosshair_crossed_x_left_down, 12, 12
right_down = ui_crosshair_crossed_x_right_down, 12, 12

[crosshair_square_crossed]
auto_scale = true
center = ui_crosshair_square_center
left = ui_crosshair_crossed_left, 12, 4
right = ui_crosshair_crossed_right, 12, 4
top = ui_crosshair_crossed_top, 4, 12
down = ui_crosshair_crossed_down, 4, 12
left_top = ui_crosshair_square_left_top, 12, 12
right_top = ui_crosshair_square_right_top, 12, 12
left_down = ui_crosshair_square_left_down, 12, 12
