[mounted_weapon_base]:weapon_base
GroupControlSection			= spawn_group
cform   	                = skeleton
visual  	                = weapons\mounted_weapons\wpn_pkm_trenoga

ammo_class		 			= ammo_7.62x54_statmgun

use_aim_bullet 				= false

script_binding 				= bind_mounted_weapon.init

; ttc
hit_power					= 0.80
hit_impulse					= 100
hit_type 					= fire_wound 	

fire_distance  		        = 1000
bullet_speed				= 825			;начальная скорость пули
rpm            		        = 650

;params of weapon recoil
fire_dispersion_base		= 1 		;угол (в градусах) базовой дисперсии оружия (оружия зажатого в тисках)

;отдача
cam_relax_speed         	= 3.0		;скорость возврата в исходное положение
cam_dispersion          	= 0.7		;увеличения угла (в градусах) с каждым выстрелом
cam_max_angle				= 8	    	;максимальный угол отдачи
cam_max_angle_horz			= 9.0   	;(degree) maximum shot horizontal degree 
cam_step_angle_horz			= 1.8		;(degree) size of step camera moved in horizontal position while shooting

light_color		 			= 0.9,0.9,0.5
light_range		 			= 6
light_var_color  			= 0.05
light_var_range  			= 0.5
light_time 		 			= 0.3

flame_particles				= weapons\generic_weapon_btr ;weapons\generic_weapon08
smoke_particles				= weapons\generic_shoot_00 ;weapons\generic_shoot_00
shell_point					= 0.0, 0.0, 0.0
shell_particles				= weapons\generic_shells00

overheat_inc 				= 0.025 
overheat_dec 				= 0.00015

overheat_particle 			= weapons\generic_shoot_00
overheat_particle_pos 		= 0,1,-0.5

[mounted_weapon]:mounted_weapon_base
class						= W_MOUNTD
$spawn						= "weapons\mounted_weapon"

snd_shoot 					= wpn_pkm_snd_shoot

fire_dispersion_condition_factor = 5	;увеличение дисперсии в процентах при максимальном износе 
misfire_probability 		= 0.0001	;вероятность осечки при максимальном износе 
condition_shot_dec 			= 0.00003	;увеличение износа при каждом выстреле

