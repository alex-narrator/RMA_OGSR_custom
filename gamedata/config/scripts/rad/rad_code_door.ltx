[logic]
active = {+rad_code_door_unlocked} ph_door@close, ph_door@locked

[ph_door@locked]
locked = true
on_info = {+rad_code_door_unlocked} ph_door@close
snd_open_start = trader_door_locked
[ph_door@close]
locked = false
closed = true
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@close