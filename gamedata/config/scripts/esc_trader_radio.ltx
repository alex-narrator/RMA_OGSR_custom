[logic]
active = ph_sound@on
on_hit = hit

[ph_sound@on]
snd = esc_trader_music
volume = 0.2
tips = ui_st_turn_off
on_use = %+esc_trader_radio_off%
on_info = {+esc_trader_radio_off} ph_idle@off
on_info2 = {+esc_trader_radio_broken} ph_idle@broken

[ph_idle@off]
tips = ui_st_turn_on
on_use = %-esc_trader_radio_off%
on_info = {-esc_trader_radio_off} ph_sound@on
on_info2 = {+esc_trader_radio_broken} ph_idle@broken

[ph_idle@broken]
on_info = {+esc_trader_radio_broken} nil

[hit]
on_info = %+esc_trader_radio_broken%