[logic]
active = ph_sound@on
on_hit = hit

[ph_sound@on]
snd = bar_radio_music
volume = 1
tips = ui_st_turn_off
on_use = %+bar_barman_radio_off%
on_info = {+bar_barman_radio_off} ph_idle@off
on_info2 = {+bar_barman_radio_broken} ph_idle@broken

[ph_idle@off]
tips = ui_st_turn_on
on_use = %-bar_barman_radio_off%
on_info = {-bar_barman_radio_off} ph_sound@on
on_info2 = {+bar_barman_radio_broken} ph_idle@broken

[ph_idle@broken]
on_info = {+bar_barman_radio_broken} nil

[hit]
on_info = %+bar_barman_radio_broken%