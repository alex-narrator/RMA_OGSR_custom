function can_set_quick_3(obj)
	return read_if_exists(sys_ini, "r_bool", obj:section(), "quick_slot", false) and quick_slots.get_item_sect(3) ~= obj:section()
end
function set_quick_0(obj)
	quick_slots.set_item(obj:section(), 0)
end
function set_quick_1(obj)
	quick_slots.set_item(obj:section(), 1)
end
function set_quick_2(obj)
	quick_slots.set_item(obj:section(), 2)
end
function set_quick_3(obj)
	quick_slots.set_item(obj:section(), 3)
end