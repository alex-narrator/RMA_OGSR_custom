function can_set_quick_0(obj)
	return read_if_exists(sys_ini, "r_bool", obj:section(), "quick_slot", false) and quick_slots.get_item_sect(0) ~= obj:section()
end
function can_set_quick_1(obj)
	return read_if_exists(sys_ini, "r_bool", obj:section(), "quick_slot", false) and quick_slots.get_item_sect(1) ~= obj:section()
end
function can_set_quick_2(obj)
	return read_if_exists(sys_ini, "r_bool", obj:section(), "quick_slot", false) and quick_slots.get_item_sect(2) ~= obj:section()
