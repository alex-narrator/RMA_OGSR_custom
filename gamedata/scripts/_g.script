function split_string(inputstr, sep, tonum)
	if not inputstr then
	return nil end
	if sep == nil then
		sep = "%s"
	end
	local t={}
	for str in string.gmatch(inputstr, "([^"..sep.."]+)") do
		table.insert(t, tonum and tonumber(str) or str)
	end
	return t
end

