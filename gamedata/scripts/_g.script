--//заповнює глобальні таблиці lv_ids та gv_ids валідними левел- та гейм-вертексами відповідно
--//ключ таблиці - ім'я ігрової локації
function fill_vertex_data()
	lv_ids, gv_ids = {}, {}
	local i = 0
	local vertex, lvid, level_name
    while game_graph():valid_vertex_id(i) do
		vertex = game_graph():vertex(i)
		lvid = vertex:level_vertex_id()  --получаем левел вертекс по гейм вертексу 
        level_name = alife():level_name(vertex:level_id()) --получаем имя уровня по его номеру из секции в  game_graph
        if not lv_ids[level_name] then
			lv_ids[level_name] = {}   
        end
		table.insert(lv_ids[level_name], lvid) --заповнюємо таблицю левел-вертексів		
        if not gv_ids[level_name] then
            gv_ids[level_name] = {}
        end
		table.insert(gv_ids[level_name], i) --заповнюємо таблицю гейм-вертексів
		i = i+1
    end
end

--//повертає перший знайдений валідний level-vertex для вказаної локації
function get_any_lvid_by_level(level_name)
	if not lv_ids then
		fill_vertex_data()
	end
	return lv_ids[level_name][1]
end

--//повертає перший знайдений валідний game-vertex для вказаної локації
function get_any_gvid_by_level(level_name)
	if not gv_ids then
		fill_vertex_data()
	end
	return gv_ids[level_name][1]
end

--//спавн по координатам та імені рівня
--//ТІЛЬКИ для об'єктів яким НЕ ПОТРІБНА прив'язка до АІ-сітки
function spawn_to_level(section, spawn_pos, level_name, spawn_dir)
	local sim = alife()
	spawn_dir = spawn_dir or vector()
	local s_obj = sim:create(section, spawn_pos, -1, get_any_gvid_by_level(level_name))
	s_obj.angle = spawn_dir
	sim:object(s_obj.id):used_ai_locations(false)
	return s_obj
end

function spawn_ammo_to_level(section, spawn_pos, level_name, count, ammo_type, spawn_dir)
	ammo_type = ammo_type or 0
	spawn_dir = spawn_dir or vector()
	local sim = alife()	
	local gvid = get_any_gvid_by_level(level_name)
	local count_in_box = read_if_exists(sys_ini, "r_s32", section, "box_size", 1)
	local s_obj
	while count > count_in_box do
		s_obj = sim:create_ammo(section, spawn_pos, -1,	gvid, -1, count_in_box, ammo_type)
		s_obj.angle = spawn_dir
		sim:object(s_obj.id):used_ai_locations(false)
		count = count - count_in_box
	end
	s_obj = sim:create_ammo(section, spawn_pos, -1,	gvid, -1, count, ammo_type)	
	s_obj.angle = spawn_dir
	sim:object(s_obj.id):used_ai_locations(false)
end

--//спавн до inventory_owner'a
function spawn_to_owner(section, owner_id)
	owner_id = owner_id or actor:id()
	return alife():create(section, vector(), -1, -1, owner_id)
end

function spawn_ammo_to_owner(section, owner_id, count, ammo_type)
	owner_id = owner_id or actor:id()
	ammo_type = ammo_type or 0
	local count_in_box = sys_ini:r_u32(section, "box_size")
	count = count or count_in_box
	local sim = alife()
	
	local spawned = {}
	local sobj
	
	while count > count_in_box do
		sobj = sim:create_ammo(section, vector(), -1,	-1, owner_id, count_in_box, ammo_type)
		table.insert(spawned, sobj)
		count = count - count_in_box
	end
	sobj = sim:create_ammo(section, vector(), -1,	-1, owner_id, count, ammo_type)
	table.insert(spawned, sobj)
	return spawned
end

--спеціально для видачі пачок набоїв враховуючи магазини
--параметри count, loaded_box, ammo_type необов'язкові (одна повна пачка та перший з переліку тип за замовчуванням)
--count - кількість пачок
--loaded_box - повна чи порожня пачка
--ammo_type - тип набою у пачці (для магазинів)
--можна видавати порожні пачки (для магазинів)
function give_ammo_box_to_actor(section, count, loaded_box, ammo_type)
	count = count ~= nil and count or 1
	loaded_box = loaded_box ~= nil and loaded_box or true
	ammo_type = ammo_type ~= nil and ammo_type or 0
	local count_in_box = loaded_box and sys_ini:r_u32(section, "box_size") or 0
	while count > 0 do
		spawn_ammo_to_owner(section, actor:id(), count_in_box, ammo_type)
		count = count - 1
		news_manager.relocate_item(actor, "in", section)
	end
end

function time_to_table(time_struct)
	local Y, M, D, h, m, s, ms = time_struct:get(Y, M, D, h, m, s, ms)
	local time_table = {Y, M, D, h, m, s, ms}
	return time_table
end

function table_to_time(time_table)
	local time_struct = game.CTime()
	time_struct:set(time_table[1], time_table[2], time_table[3], time_table[4], time_table[5], time_table[5], time_table[7])
	return time_struct
end

function has_enemy_near(victim, radius)
	local enemy_near = false
	function perform_action(obj)
		if obj:is_stalker() or obj:is_monster() then
			if obj:alive() and obj:is_relation_enemy(victim) then
				--log3("creature %s is enemy to %s", obj:name(), victim:name())
				enemy_near = true
			end
		end
	end
	level.iterate_nearest(victim:position(), radius, perform_action)
	return enemy_near
end

