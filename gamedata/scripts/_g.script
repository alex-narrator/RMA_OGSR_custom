function math.clamp(val, _min, _max)
	if _min > _max then 
		_min, _max = _max, _min 
	end
	
	if val < _min then
		val = _min
	elseif _max < val then
		val = _max
	end
	return val
end

function math.fsimilar(val1, val2, cmp)
	cmp = cmp or 0.00001
	return math.abs( val1 - val2 ) < cmp
