		elseif val_type == "r_float" then
			return ltx:r_float(section,value)
		elseif val_type == "r_u32" then
			return ltx:r_u32(section,value)
		elseif val_type == "r_s32" then
			return ltx:r_s32(section,value)			
		elseif val_type == "r_vector" then
